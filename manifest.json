{
  "manifest_version": 3,
  "name": "HumHub Notifications",
  "version": "1.0.0",
  "description": "Get real-time notifications from your HumHub instance",
  "permissions": [
    "alarms",
    "storage",
    "notifications",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "/js/background.js"
  }
}
